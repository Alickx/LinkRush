<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alickx.linkrush.api.mapper.SystemConfigMapper">

    <select id="getSystemConfigValue" resultType="java.lang.String">
        SELECT config_value
        FROM system_config
        WHERE config_name = #{configName}
    </select>
</mapper>